#
# Example slurm.conf file. Please run configurator.html
# (in doc/html) to build a configuration file customized
# for your environment.
#
#
# slurm.conf file generated by configurator.html.
#
# See the slurm.conf man page for more information.
#
ClusterName=ZA_CHPC
ControlMachine={{ inventory_hostname }}
ControlAddr={{ inventory_hostname }}
#BackupController=
#BackupAddr=
#
SlurmUser=slurm
#SlurmdUser=root
SlurmctldPort=6817
SlurmdPort=6818
AuthType=auth/munge
#JobCredentialPrivateKey=
#JobCredentialPublicCertificate=
StateSaveLocation={{ slurm_config_dir }}/slurm.state
SlurmdSpoolDir={{ slurm_spool_dir }}
SwitchType=switch/none
MpiDefault=none
SlurmctldPidFile={{ slurm_pid_dir }}/slurmctld.pid
SlurmdPidFile={{ slurm_pid_dir }}/slurmd.pid
ProctrackType=proctrack/linuxproc
#PluginDir=
CacheGroups=0
FirstJobId=1
ReturnToService=0
#MaxJobCount=
#PlugStackConfig=
#PropagatePrioProcess=
#PropagateResourceLimits=
#PropagateResourceLimitsExcept=
#Prolog=
#Epilog=
#SrunProlog=
#SrunEpilog=
#TaskProlog=
#TaskEpilog=
#TaskPlugin=
#TrackWCKey=no
#TreeWidth=50
#TmpFS=
#UsePAM=
#
# TIMERS
SlurmctldTimeout=300
SlurmdTimeout=300
InactiveLimit=0
MinJobAge=300
KillWait=30
Waittime=0

#
# SCHEDULING
#
SchedulerType=sched/backfill
#SchedulerAuth=
#SchedulerPort=
#SchedulerRootFilter=
SelectType=select/linear
FastSchedule=1
#Enables multifactor scheduling
PriorityType=priority/multifactor
#Contribution of historical usage on the composite usage value
PriorityDecayHalfLife=48:00:00
#Frequency to calculate priority change (applying decay half life factor)
PriorityCalcPeriod=05:00
#The larger the job, the greater its job size priority
PriorityFavorSmall=NO
#PriorityUsageResetPeriod=14-0
#Fairshare  100000  - More weight on the formula
#Partition    10000    - Medium weight on the formula
#JobSize     10000   - Medium weight on the formula
#Age	        1000     - Minimum weight on the formula
PriorityWeightFairshare=100000
PriorityWeightAge=1000
PriorityWeightPartition=10000
PriorityWeightJobSize=1000
#Dont use Weight QOS
PriorityWeightQOS=0
# 120 hours the job is starving, priority maxes out.
PriorityMaxAge=5-0


#
# LOGGING
#
SlurmctldDebug=3
SlurmctldLogFile={{ slurm_log_dir }}/slurmctl.log
SlurmdDebug=3
SlurmdLogFile={{ slurm_log_dir }}/slurm.log
JobCompType=jobcomp/none
#JobCompLoc=
#
# ACCOUNTING
#
JobAcctGatherType=jobacct_gather/linux
JobAcctGatherFrequency=30
AccountingStorageType=accounting_storage/slurmdbd
AccountingStorageHost={{ inventory_hostname }}
AccountingStorageLoc={{ slurm_database_name }}
#AccountingStoragePass=
#AccountingStorageUser=

#
# COMPUTE NODES
#
NodeName=snode[1-32] NodeHostName=slurm.chpc.ac.za NodeAddr=127.0.0.1 State=UNKNOWN
PartitionName=debug Nodes=snode[1-32] Default=YES MaxTime=INFINITE State=UP
